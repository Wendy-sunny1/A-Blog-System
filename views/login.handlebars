<link rel='stylesheet' type='text/css' href='/css/login.css' />

<div class='toastMessage'>
    {{#if toastMessage}}
        <p class="toastMessageLogin">{{toastMessage}}</p>
    {{/if}}
</div>

<div class='container'>
    <form action='/login' method='POST'>
        <div class='content'>
            <h1>Welcome</h1>
            <div class='username'>
                <input
                    type='text'
                    name='username'
                    required
                    placeholder='username'
                />
            </div>

            <div class='password'>
                <input
                    type='password'
                    name='password'
                    required
                    placeholder='password'
                />
            </div>

            <button type='submit'>LOGIN</button>

            <div class='signUp'>
                <p>Don't have an account?</p>
                <a href='/newAccount'> Sign Up</a>
            </div>
        </div>
    </form>
</div>