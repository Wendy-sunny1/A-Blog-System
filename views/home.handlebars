<section class='block block--dark block--skewed-left hero'>
    <div class='container grid grid--1x2'>
        <header class='block__header hero__content'>
            <h1 class='block__heading' data-aos='zoom-in-up'>Blog Hosting for
                Pros</h1>
            <p class='hero__tagline'>
                Good blogging platform for getting started quickly :)
            </p>
            <a href='/login' class='btn btn--accent btn--stretched'>Get Started</a>
        </header>

        <picture data-aos='zoom-out'>
            <source
                type='image/webp'
                srcset='images/banner.webp 1x, images/banner@2x.webp 2x'
            />
            <source
                type='image/png'
                srcset='images/banner.png 1x, images/banner@2x.png 2x'
            />
            <img class='hero__image' src='images/banner.png' alt='' /></picture>
    </div>
</section>

<form action='/searchAndSortArticles' method='POST'>
    <section class='block container block-domain'>
        <header class='block__header' data-aos='slide-up'>
            <h2 id='target'>Browse All Articles</h2>
            <p>
                Search and sort all article lists by article title, username,
                and date.
            </p>
        </header>

        <div class='input-group'>
            <input
                name='searchTerm'
                type='text'
                class='input'
                id='search-input'
                placeholder='Search article lists'
                autocomplete='off'
            />
            <button type='submit' class='btn btn--accent'>
                <img class='icon icon--white' src='/images/search.svg' alt='' />
                Search
            </button>

            <select class='input' id='sort-by' name='userSelection'>
                <option value='title'>Sort by Title</option>
                <option value='username'>Sort by UserName</option>
                <option value='publishTime'>Sort by Date</option>
            </select>
        </div>

    </section>
</form>

{{#if user}}
    {{#each allArticles}}
        {{#if this.imageURL}}
            <article class='grid grid--1x2 feature articleGrid'>
                <div class='feature__content' data-aos='fade-right'>
                    <div class='userArticleInfo'>
                        <span class='icon-container'>
                            <img
                                class='icon'
                                src='/images/{{this.avatarid}}.png'
                                alt=''
                            />
                        </span>

                        <span class='publishTimeSpan'>
