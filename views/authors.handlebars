<link rel='stylesheet' href='/css/subscription.css' />

<div class='container'>
    {{#if authorNamesArray}}
        <h3>His/Her authors: </h3>
        <ul>
            {{#each authorNamesArray}}
                <li class='list'>
                    <div class='avatar'>
                        <img
                            class='icon'
                            src='/images/{{this.avatarid}}.png'
                            alt=''
                        />
                    </div>

                    <div class='name'>
                        <a
                            href='/author/{{this.username}}'
                        >{{this.username}}</a>
                    </div>
                </li>
            {{/each}}
        </ul>
    {{else}}
        <h3>No authors here.</h3>
    {{/if}}
</div>